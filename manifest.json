{
  "manifest_version": 3,
  "name": "Estadísticas de Navegación",
  "version": "1.0",
  "description": "Complemento para llevar estadísticas de búsquedas, sitios visitados y consumo de datos.",
  "permissions": [
    "tabs",
    "storage",
    "webRequest",
    "webNavigation",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
